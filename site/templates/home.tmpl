    <div class="header">
        Welcome to Computer Science House <!--TODO: Environment Variable-->
    </div>
    <br>
    <h2 style="text-align:center">
        What is your name?
    </h2>
    <input name="knock_name_input" class="form-control form-control-lg" type="text" autocomplete="off" placeholder="Enter Name" id="knock_name_input" style="max-width: 300px; display: block; margin: auto;">
    <br>
    <h2 id="tooltip-text" style="text-align:center">
        Where are you?
    </h2>
    <div id="locationList">
        {{ range $key, $value := .location_map }}
        <button id="{{ $key }}" data-toggle="modal" data-target="#request_modal" class="btn btn-outline-primary beeg">{{ $value }}</button>
        {{ end }}
    </div>
    <div id="request_modal" class="modal fade" role="dialog" aria-labelledby="request_modal_label" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header" id="request_modal_header">
              <h5 class="modal-title" id="request_modal_title">Requesting access at: {{ .location }}</h5>
              <h5 class="modal-title" id="nameless_title">Wait! Who are you!?</h5>
              <!-- <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button> -->
            </div>
            <div class="modal-body" id="request_modal_dialog">
                <div class="alert alert-success" id="request_answer_alert" style="margin-bottom: 0px;">
                    <!-- <button type="button" class="close" data-dismiss="alert">&times;</button> -->
                    <strong>Request answered</strong>
                    <p>Sit tight! Someone is coming to let you in.</p>
                </div>
                <div class="alert alert-danger" id="request_nameless_alert" style="margin-bottom: 0px;">
                    <!-- <button type="button" class="close" data-dismiss="alert">&times;</button> -->
                    <strong>Please enter your name!</strong>
                    <p>"We got no names, we are <em>nameless</em>, man!"</p>
                </div>
                <div class="alert alert-danger" id="request_timeout_alert" style="margin-bottom: 0px;">
                    <!-- <button type="button" class="close" data-dismiss="alert">&times;</button> -->
                    <strong>Nobody could answer your request</strong>
                    <p>Please come back later.</p>
                </div>
                <div class="alert alert-warning" id="request_nvm_alert" style="margin-bottom: 0px;">
                    <!-- <button type="button" class="close" data-dismiss="alert">&times;</button> -->
                    <strong>Request cancelled</strong>
                    <p>Your request has been cancelled.</p>
                </div>
                <div id="timeout_div">
                    <p id="timeout_counter"> Pending...</p>
                    <div class="progress">
                        <div class="progress-bar bg-success" id="timeout_bar" role="progressbar" style="width: 100%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
              <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
              <button id="request_modal_cancel_button" type="button" class="btn btn-danger">Cancel</button>
              <button id="request_modal_home_button" type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
            <div class="get-me-tf-in-bro">
                <img src="/static/let-me-in-eric-andre.gif" width="100%" height="100%">
            </div>
          </div>
        </div>
    </div>
